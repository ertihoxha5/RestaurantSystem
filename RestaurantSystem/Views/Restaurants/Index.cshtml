@model IEnumerable<RestaurantSystem.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Restaurants</h3>
    <a asp-action="Create" class="btn btn-success">Add New Restaurant</a>
</div>
<div class="mb-3">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show auto-hide-alert" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show auto-hide-alert" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.Search"
               class="form-control" placeholder="Search by name or location..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Description</th>
            <th>View Tables</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Location</td>
                <td>@u.Description</td>
                <td>
                    <a asp-controller="Tables" asp-action="Index" asp-route-restaurantId="@u.Id" class="btn btn-secondary btn-sm">Tables</a>

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        window.setTimeout(function () {
            var alerts = document.querySelectorAll('.auto-hide-alert');
            alerts.forEach(function (alert) {
                alert.classList.remove('show');
                alert.classList.add('hide');
                setTimeout(function () {
                    alert.remove();
                }, 500);
            });
        }, 2500); // 4 seconds

    </script>
}
