@model RestaurantSystem.Models.Restaurant

@{
    ViewData["Title"] = "Delete Restaurant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Restaurant</h4>
        </div>

        <div class="card-body">

            <h5 class="text-danger mb-4">Are you sure you want to delete this restaurant?</h5>

            <div class="mb-3">
                <label class="form-label fw-bold">Name</label>
                <input class="form-control" value="@Model.Name" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Location</label>
                <input class="form-control" value="@Model.Location" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Description</label>
                <input class="form-control" value="@Model.Description" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Created At</label>
                <input class="form-control" value="@Model.CreatedAt" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Updated At</label>
                <input class="form-control" value="@Model.UpdatedAt" disabled />
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end">
                    <button class="btn btn-danger px-4 me-2">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="text-decoration-none">← Back to List</a>
    </div>
</div>
