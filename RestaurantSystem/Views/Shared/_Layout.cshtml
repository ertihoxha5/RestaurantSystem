<!DOCTYPE html>
<html lang="sq">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant</title>

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold fs-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-flower1"></i> Restaurant System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Kryefaqja</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Reservation" asp-action="MyReservations">Rezervimet</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="ClientProfile" asp-action="Index">Profili</a></li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-fill pt-5">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-geo-alt-fill"></i> Lokacioni</h5>
                    <p class="mb-1">Rr. Agim Ramadani, Nr. 22</p>
                    <p>Prishtinë, Kosovë</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-clock-fill"></i> Orari</h5>
                    <p class="mb-1">E Hëne - E Premte: 10:00 - 23:00</p>
                    <p>E Shtunë - E Diel: 12:00 - 00:00</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-telephone-fill"></i> Kontakt</h5>
                    <p class="mb-1">+383 49 123 456</p>
                    <p>info@gourmet-ks.com</p>
                </div>
            </div>
            <hr class="bg-white opacity-25">
            <div class="text-center">
                <p class="mb-0">&copy; 2025  Restaurant System – Të gjitha të drejtat e rezervuara.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>