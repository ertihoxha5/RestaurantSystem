<!DOCTYPE html>
<html lang="sq">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            background-color: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
        }

        /* HEADER */
        .topbar {
            height: 70px;
            background: linear-gradient(90deg, #1f1f1f, #343a40);
            color: white;
            padding: 0 25px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .brand {
            font-weight: bold;
            font-size: 20px;
            color: #e1a300;
        }

        /* SIDEBAR */
        .sidebar {
            position: fixed;
            top: 70px;
            left: 0;
            width: 230px;
            height: calc(100vh - 70px);
            background-color: #1f1f1f;
            padding: 20px 15px;
        }

            .sidebar .nav-link {
                color: #cfcfcf;
                padding: 12px 15px;
                border-radius: 12px;
                margin-bottom: 8px;
                display: flex;
                align-items: center;
                gap: 10px;
                transition: all 0.2s ease;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #e1a300;
                    color: #1f1f1f;
                }

        /* CONTENT */
        .content {
            margin-left: 230px;
            padding: 30px;
            padding-top: 100px;
        }

        /* FOOTER OPTIONAL */
        .footer {
            text-align: center;
            padding: 15px;
            color: #aaa;
            font-size: 14px;
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <div class="topbar">
        <div class="brand">Restaurant Reservation System - Paneli i Admin-it</div>
        <partial name="_LoginPartial" />
    </div>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <ul class="nav flex-column">

            <li class="nav-item">
                <a class="nav-link active" asp-controller="Admin" asp-action="Dashboard">
                    <i class="bi bi-speedometer2"></i>
                    Dashboard
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Profile">
                    <i class="bi bi-person-circle"></i>
                    My Profile
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="Index">
                    <i class="bi bi-people-fill"></i>
                    Users
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Restaurants" asp-action="Index">
                    <i class="bi bi-shop"></i>
                    Restaurants
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Reservations" asp-action="Index">
                    <i class="bi bi-calendar-check"></i>
                    Reservations
                </a>
            </li>

         

        </ul>
    </div>

    <!-- CONTENT -->
    <div class="content">
        @RenderBody()
        <div class="footer mt-5">
            © @DateTime.Now.Year Restaurant Reservation System
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
