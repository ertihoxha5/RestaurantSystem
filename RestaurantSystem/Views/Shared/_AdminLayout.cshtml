<!DOCTYPE html>
<html lang="sq">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .sidebar {
            background-color: #343a40;
            color: white;
            min-height: 100vh;
        }

        #menu .nav-link {
            color: rgb(225, 163, 0) !important;
        }

            #menu .nav-link:hover {
                color: white !important;
            }
    </style>
</head>

<body>

    <!-- HEADER -->
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <h4 class="text-white mb-0">Admin Dashboard</h4>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <!-- MAIN -->
    <div class="container-fluid">
        <div class="row" style="padding-top:70px">

            <!-- SIDEBAR -->
            <div class="col-2 sidebar p-3">
                <ul class="nav nav-pills flex-column" id="menu">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                            Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Profile">
                            My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">
                            Users
                        </a>
                    </li>

                </ul>
            </div>

            <!-- CONTENT -->
            <div class="col-10 p-4">
                @RenderBody()
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
