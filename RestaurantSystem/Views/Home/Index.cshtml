@{
    ViewData["Title"] = "Mirë se vini!";
}

<!-- HERO SECTION -->
<section class="hero min-vh-100 d-flex align-items-center position-relative overflow-hidden"
         style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/hero.jpg') center/cover no-repeat;">
    <div class="container position-relative z-3">
        <div class="row justify-content-center text-center text-white">
            <div class="col-lg-8">
                <h1 class="display-1 fw-bold mb-4 animate__animated animate__fadeInDown">
                    Mirë se vini në <span class="text-warning">Restaurantin tonë</span>
                </h1>
                <p class="lead fs-3 mb-5 animate__animated animate__fadeInUp">
                    Ushqim i shijshëm, ambient magjik, kujtime të paharrueshme.
                </p>

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                        <a asp-area="Identity" asp-page="/Account/Register"
                           class="btn btn-warning btn-lg px-5 py-3 rounded-pill shadow-lg me-3">
                            <i class="bi bi-person-plus"></i> Regjistrohu
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Login"
                           class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill shadow-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Kyçu
                        </a>
                    </div>
                }
                else
                {
                    <a asp-controller="Reservations" asp-action="Create"
                       class="btn btn-success btn-lg px-5 py-3 rounded-pill shadow-lg animate__animated animate__pulse animate__infinite">
                        <i class="bi bi-calendar-check"></i> Rezervo Tani
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="position-absolute bottom-0 start-50 translate-middle-x text-white mb-3">
        <i class="bi bi-chevron-down fs-1 animate__animated animate__bounce animate__infinite"></i>
    </div>
</section>

<!-- INFO SECTION -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="p-4 rounded-3 shadow-sm bg-white h-100">
                    <i class="bi bi-award fs-1 text-warning mb-3"></i>
                    <h4 class="fw-bold">Cilësi Premium</h4>
                    <p class="text-muted">Përbërës të freskët, çdo ditë.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 rounded-3 shadow-sm bg-white h-100">
                    <i class="bi bi-people fs-1 text-success mb-3"></i>
                    <h4 class="fw-bold">Shërbim i Shkëlqyer</h4>
                    <p class="text-muted">Stafi ynë është këtu për ty.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 rounded-3 shadow-sm bg-white h-100">
                    <i class="bi bi-clock-history fs-1 text-primary mb-3"></i>
                    <h4 class="fw-bold">Rezervim 24/7</h4>
                    <p class="text-muted">Rezervo kur të duash.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ANIMACIONE -->
<link href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animation.css" rel="stylesheet">