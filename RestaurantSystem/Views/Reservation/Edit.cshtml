@model RestaurantSystem.Models.ViewModels.ReservationEditViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Edit Reservation</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label class="form-label text-muted">Restaurant</label>
                            <div class="form-control-plaintext fw-semibold">
                                @Model.RestaurantName
                            </div>
                        </div>


                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label">Start Time</label>
                            <input asp-for="StartTime"
                                   type="datetime-local"
                                   class="form-control"
                                   min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <small class="text-muted">Please select a new start time.</small>

                            <span asp-validation-for="StartTime"
                                  class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NumberOfGuests" class="form-label">Number of Guests</label>
                            <input asp-for="NumberOfGuests"
                                   class="form-control" />
                            <span asp-validation-for="NumberOfGuests"
                                  class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="MyReservations"
                               class="btn btn-outline-secondary">
                                Cancel
                            </a>

                            <button type="submit"
                                    class="btn btn-success px-4">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
