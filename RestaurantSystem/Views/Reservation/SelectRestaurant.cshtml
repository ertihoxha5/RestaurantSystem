@using RestaurantSystem.Models.ViewModels
@model SelectedRestaurantViewModel

<div class="container my-5">

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h2 class="text-center mb-4">
                <i class="bi bi-shop me-2 text-warning"></i>
                Select a Restaurant
            </h2>

            @if (!(bool)ViewBag.HasProfile)
            {
                <div class="alert alert-warning d-flex align-items-start">
                    <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                    <div>
                        <strong>Profile required</strong><br />
                        Për të krijuar rezervimin, ju duhet fillimisht tëkrijoni profilin tuaj.
                        <a asp-controller="ClientProfile"
                           asp-action="Index"
                           class="alert-link">
                            Krijo profilin këtu. 
                        </a>.
                    </div>
                </div>
            }

            <div class="list-group mt-4">

                @foreach (var restaurant in Model.Restaurants)
                {
                    <div class="list-group-item shadow-sm rounded mb-3">

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">
                                    <i class="bi bi-building me-1 text-warning"></i>
                                    @restaurant.Name
                                </h5>
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt me-1"></i>
                                    @restaurant.Location
                                </small>
                            </div>

                            @if ((bool)ViewBag.HasProfile)
                            {
                                <a asp-action="Details"
                                   asp-route-restaurantId="@restaurant.Id"
                                   class="btn btn-warning btn-sm px-4">
                                    <i class="bi bi-arrow-right-circle me-1"></i>
                                    Selekto
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-warning btn-sm px-4"
                                        disabled
                                        title="Complete your profile first">
                                    <i class="bi bi-lock-fill me-1"></i>
                                    Select
                                </button>
                            }
                        </div>

                    </div>
                }

            </div>

        </div>
    </div>

</div>
