@model Reservation

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h2> Reservation Confirmed!</h2>
        <p>Your reservation has been successfully created.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Restaurant:</dt>
                <dd class="col-sm-9">@Model.Restaurant.Name</dd>

                <dt class="col-sm-3">Table:</dt>
                <dd class="col-sm-9">@Model.Table.TableNumber</dd>

                <dt class="col-sm-3">Guests:</dt>
                <dd class="col-sm-9">@Model.NumberOfGuests</dd>

                <dt class="col-sm-3">Start:</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("f")</dd>

                <dt class="col-sm-3">End:</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("f")</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning text-dark">
                        @Model.Status
                    </span>
                </dd>
            </dl>

            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                🏠 Back to Home
            </a>
        </div>
    </div>
</div>
