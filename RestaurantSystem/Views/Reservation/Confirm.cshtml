@using RestaurantSystem.Models.ViewModels
@model ReservationConfirmViewModel

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-light text-black">
            <h2 class="mb-0">Confirm Your Reservation</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Restaurant:</dt>
                <dd class="col-sm-9">@Model.RestaurantName</dd>

                <dt class="col-sm-3">Table:</dt>
                <dd class="col-sm-9">@Model.TableNumber</dd>

                <dt class="col-sm-3">Guests:</dt>
                <dd class="col-sm-9">@Model.NumberOfGuests</dd>

                <dt class="col-sm-3">Start:</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("f")</dd>

                <dt class="col-sm-3">End:</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("f")</dd>
            </dl>

            <form asp-action="Confirm" method="post" class="mt-4">
                <input type="hidden" asp-for="RestaurantId" />
                <input type="hidden" asp-for="TableId" />
                <input type="hidden" asp-for="StartTime" />
                <input type="hidden" asp-for="EndTime" />
                <input type="hidden" asp-for="NumberOfGuests" />

                <button type="submit" class="btn btn-success me-2">
                    Confirm Reservation
                </button>

                <a asp-action="Details"
                   asp-route-restaurantId="@Model.RestaurantId"
                   class="btn btn-secondary">
                    Change Details
                </a>
            </form>
        </div>
    </div>
</div>
