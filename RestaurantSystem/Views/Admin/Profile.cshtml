@model RestaurantSystem.Models.AdminProfile

@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">

    <div class="mb-4">
        <h3 class="fw-bold">My Profile</h3>
        <p class="text-muted">Manage your personal information</p>
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="bi bi-person-circle"></i> Admin Profile Details
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Profile" method="post">
                @Html.AntiForgeryToken()
                <div class="row g-4">
                    <div class="col-md-5"><label class="form-label fw-semibold">First Name</label><input asp-for="FirstName" class="form-control" placeholder="Enter first name"/></div>
                    <div class="col-md-5"><label class="form-label fw-semibold">Last Name</label><input asp-for="LastName" class="form-control" placeholder="Enter last name"/></div>
                    <div class="col-md-5"><label class="form-label fw-semibold">Phone Number</label><input asp-for="PhoneNumber" class="form-control" placeholder="+383 xx xxx xxx"/></div></div>
                <div class="mt-4 d-flex justify-content-end"><button type="submit" class="btn btn-primary px-3"><i class="bi bi-save"></i> Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>