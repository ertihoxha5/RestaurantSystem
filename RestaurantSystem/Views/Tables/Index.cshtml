@model IEnumerable<RestaurantSystem.Models.Table>

@{
    ViewData["Title"] = "Tables Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">

    <h3>@ViewBag.RestaurantName's Tables</h3>

    <a asp-action="Create" asp-route-restaurantId="@ViewBag.RestaurantId" class="btn btn-success">
        Add New Table
    </a>
</div>
<div class="mb-3">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show auto-hide-alert" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show auto-hide-alert" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="number" name="searchNumber" value="@ViewBag.SearchNumber"
               class="form-control" placeholder="Search by table number..." />
        <input type="hidden" name="restaurantId" value="@ViewBag.RestaurantId" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<!-- Table with sortable columns -->
<table class="table table-striped table-bordered" id="tablesTable">
    <thead class="table-dark">
        <tr>
            <th onclick="sortTable(0)" style="cursor:pointer;">Table Number <i class="bi bi-arrow-down-up"></i></th>
            <th onclick="sortTable(1)" style="cursor:pointer;">Capacity <i class="bi bi-arrow-down-up"></i></th>
            <th onclick="sortTable(2)" style="cursor:pointer;">Restaurant <i class="bi bi-arrow-down-up"></i></th>
            <th onclick="sortTable(3)" style="cursor:pointer;">Status <i class="bi bi-arrow-down-up"></i></th>
            <th style="width:220px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TableNumber</td>
                <td>@item.Capacity</td>
                <td>@item.Restaurant?.Name</td>
                <td>
                    @switch (item.Status)
                    {
                        case TableStatus.Available:
                            <span class="badge bg-success">Available</span>
                            break;

                        case TableStatus.Reserved:
                            <span class="badge bg-danger">Reserved</span>
                            break;

                        case TableStatus.Occupied:
                            <span class="badge bg-warning text-dark">Occupied</span>
                            break;

                        case TableStatus.Cleaning:
                            <span class="badge bg-info text-dark">Cleaning</span>
                            break;

                        case TableStatus.OutOfService:
                            <span class="badge bg-secondary">Out of Service</span>
                            break;

                        default:
                            <span class="badge bg-light text-dark">@item.Status</span>
                            break;
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Auto-hide alerts
        window.setTimeout(function () {
            var alerts = document.querySelectorAll('.auto-hide-alert');
            alerts.forEach(function (alert) {
                alert.classList.remove('show');
                alert.classList.add('hide');
                setTimeout(function () {
                    alert.remove();
                }, 500);
            });
        }, 2500);

        // Simple sort for table
        function sortTable(n) {
            var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
            table = document.getElementById("tablesTable");
            switching = true;
            dir = "asc";
            while (switching) {
                switching = false;
                rows = table.rows;
                for (i = 1; i < (rows.length - 1); i++) {
                    shouldSwitch = false;
                    x = rows[i].getElementsByTagName("TD")[n];
                    y = rows[i + 1].getElementsByTagName("TD")[n];
                    if (dir == "asc") {
                        if (x.innerText.toLowerCase() > y.innerText.toLowerCase()) {
                            shouldSwitch = true;
                            break;
                        }
                    } else if (dir == "desc") {
                        if (x.innerText.toLowerCase() < y.innerText.toLowerCase()) {
                            shouldSwitch = true;
                            break;
                        }
                    }
                }
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                    switchcount ++;
                } else {
                    if (switchcount == 0 && dir == "asc") {
                        dir = "desc";
                        switching = true;
                    }
                }
            }
        }
    </script>
}
