@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
}

<div class="login-page d-flex align-items-center justify-content-center">
    <div class="login-card shadow-lg">

        <!-- HEADER -->
        <div class="text-center mb-4">
            <i class="bi bi-flower1 text-warning display-4"></i>
            <h2 class="fw-bold mt-2">Mirë se vini</h2>
            <p class="text-muted">Kyçu për të vazhduar</p>
        </div>

        <!-- FORM -->
        <form id="account" method="post">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       placeholder="name@example.com"
                       autocomplete="username" />
                <label asp-for="Input.Email">
                    <i class="bi bi-envelope-fill text-warning me-1"></i> Email
                </label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password"
                       class="form-control"
                       placeholder="Password"
                       autocomplete="current-password" />
                <label asp-for="Input.Password">
                    <i class="bi bi-lock-fill text-warning me-1"></i> Password
                </label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Remember me
                    </label>
                </div>

                <a asp-page="./ForgotPassword" class="text-decoration-none small">
                    Forgot password?
                </a>
            </div>

            <button type="submit" class="btn btn-warning w-100 py-2 fw-semibold">
                <i class="bi bi-box-arrow-in-right me-1"></i> Log In
            </button>

            <hr class="my-4">

            <div class="text-center small">
                Nuk ke llogari?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold text-decoration-none">
                    Regjistrohu
                </a>
            </div>

            <div class="text-center mt-2">
                <a asp-page="./ResendEmailConfirmation" class="small text-muted text-decoration-none">
                    Resend email confirmation
                </a>
            </div>

        </form>
    </div>
</div>

<style>
    .login-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #1f1f1f, #343a40);
        padding: 20px;
    }

    .login-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 35px 30px;
        width: 100%;
        max-width: 420px;
    }

        .login-card .form-control {
            border-radius: 12px;
        }

        .login-card button {
            border-radius: 12px;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
